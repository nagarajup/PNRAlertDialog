<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CloseBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="colorPrimary">#606060</item>
        <item name="colorAccent">#00897B</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/CloseBottomSheetStyle</item>
    </style>
    <style name="CloseBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>